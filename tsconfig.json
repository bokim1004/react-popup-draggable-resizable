{
  "compilerOptions": {
    "target": "ESNext",                   
    "lib": ["DOM","ESNext"],  
    "module": "ESNext", 
    "moduleResolution": "bundler",
    "rootDir": "./src",                                 
    "outDir": "./dist",                                 
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                      
    "skipLibCheck": true , "declaration": true,
  }
}
